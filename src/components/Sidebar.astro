---
import { getCollection } from 'astro:content';
const docs = (await getCollection("docs"))

const { active } = Astro.props
---

<aside transition:animate="none" id="sidebar-multi-level-sidebar" class="fixed top-0 left-0 z-40 w-[300px] h-screen"  aria-label="Sidebar">
	<div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
		<ul class="space-y-2 font-medium gap-2 flex flex-col">
			{
			docs.map((doc) => (
			<li>
				<a href={`/${doc.slug}`}>
					<h4 class={ active == doc.slug ? "title active" : "title" }>{doc.data.title}</h4>
				</a>
			</li>
			))
			}
		</ul>
	</div>
</aside>
<style>
.active {
	color: skyblue;
	}
</style>

